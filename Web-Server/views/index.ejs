<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Camera System</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://portal.ptit.edu.vn/wp-content/uploads/2016/04/favicon.png"
    />

    <link rel="stylesheet" type="text/css" href="/public/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />

    <script
      src="https://code.jquery.com/jquery-3.7.1.js"
      integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.socket.io/3.1.3/socket.io.min.js"
      integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
      crossorigin="anonymous"
    ></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <header>
      <nav
        class="navbar navbar-expand-md navbar-light fixed-top"
        style="background-color: #d30000"
        id="navbar"
      >
        <div class="container">
          <div class="row" style="flex-grow: 1">
            <div class="col-3 d-flex justify-content-start"></div>
            <div class="col-6 d-flex justify-content-center align-items-center">
              <p
                class="h5 text-center"
                style="color: #ffffff; margin-top: 3px; margin-bottom: 3px"
              >
                HỆ THỐNG ĐIỀU KHIỂN XE TỰ HÀNH
              </p>
            </div>
            <div class="col-3 d-flex justify-content-end"></div>
          </div>
        </div>
      </nav>

      <nav
        id="sidebarMenu"
        class="collapse d-lg-block sidebar collapse bg-white"
      >
        <div class="position-sticky">
          <div class="list-group list-group-flush">
            <div class="row rounded pb-1">
              <div class="col">
                <a
                  href="/"
                  class="list-group-item list-group-item-action py-2 active"
                  aria-current="true"
                >
                  <i class="bi bi-camera me-3"></i><span>Camera</span>
                </a>
              </div>
            </div>

            <div class="row rounded pb-1">
              <div class="col">
                <a href="/" class="list-group-item list-group-item-action py-2"
                  ><i class="bi bi-gear me-3"></i><span>Cài đặt</span></a
                >
              </div>
            </div>

            <div class="row rounded py-2"></div>

            <div class="row rounded pt-5 pb-1">
              <div class="col">
                <a
                  href="#"
                  class="list-group-item list-group-item-action py-2 text-center"
                  style="
                    background-color: #d30000;
                    color: #fff;
                    font-weight: bold;
                    border: 0;
                  "
                  >Điều khiển</a
                >
              </div>
            </div>

            <div class="row rounded pt-3 pb-1">
              <div class="col d-flex justify-content-center">
                <button
                  type="button"
                  class="btn btn-danger square-button"
                  id="tangtoc"
                >
                  <i class="bi bi-arrow-up-circle"></i>
                </button>
              </div>
            </div>

            <div class="row rounded py-4">
              <div class="col-4 d-flex justify-content-end">
                <button
                  type="button"
                  class="btn btn-danger square-button"
                  id="sangtrai"
                >
                  <i class="bi bi-arrow-left-circle"></i>
                </button>
              </div>
              <div class="col-4 d-flex justify-content-center">
                <button
                  type="button"
                  class="btn btn-danger square-button"
                  id="phanh"
                >
                  <i class="bi bi-circle"></i>
                </button>
              </div>
              <div class="col-4 d-flex justify-content-start">
                <button
                  type="button"
                  class="btn btn-danger square-button"
                  id="sangphai"
                >
                  <i class="bi bi-arrow-right-circle"></i>
                </button>
              </div>
            </div>

            <div class="row rounded pb-5">
              <div class="col d-flex justify-content-center">
                <button
                  type="button"
                  class="btn btn-danger square-button"
                  id="giamtoc"
                >
                  <i class="bi bi-arrow-down-circle"></i>
                </button>
              </div>
            </div>

            <div class="row">
              <div class="col-5">
                <p class="text-center">Đi lùi</p>
              </div>
              <div class="col-2 d-flex justify-content-center">
                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="direction-control"
                  />
                </div>
              </div>
              <div class="col-5">
                <p class="text-center">Đi tiến</p>
              </div>
            </div>

            <div class="row">
              <div class="col-5">
                <p class="text-center">Tắt đèn</p>
              </div>
              <div class="col-2 d-flex justify-content-center">
                <div class="form-check form-switch">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="flash-control"
                  />
                </div>
              </div>
              <div class="col-5">
                <p class="text-center">Bật đèn</p>
              </div>
            </div>

            <div class="row rounded" style="padding-top: 3.75rem" id="back">
              <div class="col">
                <a
                  href="/"
                  class="list-group-item list-group-item-action py-2 active"
                  aria-current="true"
                >
                  <i class="bi bi-arrow-90deg-left me-3"></i
                  ><span>Quay lại</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <div class="container main-web">
      <div class="row pb-4" id="camera1-2">
        <div class="col-6" id="camera-1">
          <div class="card">
            <div class="card-header">
              <div class="row">
                <div class="col">
                  <h4 class="text-center my-auto" style="color: #fff">
                    Camera 1
                  </h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <img
                    id="esp1"
                    src=".\public\image\Black.png"
                    alt="Webcam Image"
                    width="488.4"
                    height="200"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-6" id="camera-2">
          <div class="card">
            <div class="card-header">
              <div class="row">
                <div class="col">
                  <h4 class="text-center my-auto" style="color: #fff">
                    Camera 2
                  </h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <img
                    id="esp2"
                    src=".\public\image\Black.png"
                    alt="Webcam Image"
                    width="488.4"
                    height="200"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row pb-3" id="camera3-4">
        <div class="col-6" id="camera-3">
          <div class="card">
            <div class="card-header">
              <div class="row">
                <div class="col">
                  <h4 class="text-center my-auto" style="color: #fff">
                    Camera 3
                  </h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <img
                    id="esp3"
                    src=".\public\image\Black.png"
                    alt="Webcam Image"
                    width="488.4"
                    height="200"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-6" id="camera-4">
          <div class="card">
            <div class="card-header">
              <div class="row">
                <div class="col">
                  <h4 class="text-center my-auto" style="color: #fff">
                    Camera 4
                  </h4>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <img
                    id="esp4"
                    src=".\public\image\Black.png"
                    alt="Webcam Image"
                    width="488.4"
                    height="200"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/public/js/javascript.js"></script>
  </body>
</html>
